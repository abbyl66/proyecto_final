<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="5dp"
    style="@style/fondoEpub"
    android:layout_marginBottom="5dp"
    android:elevation="8dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:id="@+id/iconEpub"
        android:src="@drawable/epub_file"
        android:scaleType="centerCrop"></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombreArch"
            android:text="Nombre del archivo"
            android:textSize="13sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tamanioArch"
            android:textSize="10sp"
            android:text="TamaÃ±o del archivo"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fechaArch"
            android:textSize="10sp"
            android:text="Fecha del archivo"></TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/cargaArchivoEpub"
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            android:outlineSpotShadowColor="@color/rosa"
            android:layout_height="20dp"></ProgressBar>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/libroGuardado"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            android:layout_marginTop="15dp"></ImageView>

    </RelativeLayout>

</LinearLayout>