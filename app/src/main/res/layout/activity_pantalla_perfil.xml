<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.PantallaPerfil"
    android:id="@+id/dsp_contenido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"></include>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nombreTitP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/celeste"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textCapSentences"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutPerfil"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/contenedor_blanco"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nombreTitP">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:id="@+id/librosPerfil"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="@color/celeste"
                            android:textSize="20sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtlibrosP"
                            android:text="Libros"
                            android:paddingLeft="40dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/celeste"
                            android:textSize="16sp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:id="@+id/coleccPerfil"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="@color/celeste"
                            android:textSize="20sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtcoleccP"
                            android:text="Colecciones"
                            android:textAlignment="center"
                            android:layout_marginEnd="11dp"
                            android:textColor="@color/celeste"
                            android:textSize="16sp"></TextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nombretxt"
                        android:layout_weight="1"
                        android:text="Nombre"
                        android:textStyle="bold"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/celeste"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nombrePerfil"
                        android:text="Nombre"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFD9D9D9"
                        android:textSize="18sp"></TextView>

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:id="@+id/editarNombre"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        app:cornerRadius= "10dp"></Button>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:background="@color/celeste">
                </androidx.appcompat.widget.AppCompatImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailtxt"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="@color/celeste"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailPerfil"
                        android:text="Email"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFD9D9D9"
                        android:textSize="18sp"></TextView>

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:id="@+id/editarEmail"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        app:cornerRadius= "10dp"></Button>



                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:background="@color/celeste">
                </androidx.appcompat.widget.AppCompatImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/usertxt"
                        android:layout_weight="1"
                        android:text="Usuario"
                        android:textStyle="bold"
                        android:textColor="@color/celeste"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userPerfil"
                        android:text="Usuario"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFD9D9D9"
                        android:textSize="18sp"></TextView>

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:id="@+id/editarUsuario"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        app:cornerRadius= "10dp"></Button>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:background="@color/celeste">
                </androidx.appcompat.widget.AppCompatImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contrtxt"
                        android:layout_weight="1"
                        android:text="Contraseña"
                        android:textStyle="bold"
                        android:textColor="@color/celeste"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contrPerfil"
                        android:text="**********"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFD9D9D9"
                        android:textSize="18sp"></TextView>
                    <Button
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:id="@+id/editarContr"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        app:cornerRadius= "10dp"></Button>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/drawer_izq"></include>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>