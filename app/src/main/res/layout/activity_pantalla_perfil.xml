<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fondoPerfil"
    tools:context=".vista.PantallaPerfil"
    android:id="@+id/dsp_contenido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"></include>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nombreTitP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                style="@style/txtColorW"
                android:textSize="25sp"
                android:textStyle="bold"
                android:inputType="textCapSentences"
                android:textAlignment="center"
                android:fontFamily="@font/alata"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <LinearLayout
                android:id="@+id/layoutPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:elevation="30dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="30dp"
                style="@style/fondoDatosP"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nombreTitP">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/librosPerfil"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="0"
                            style="@style/txtColorR"
                            android:textSize="20sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/txtlibrosP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:paddingLeft="40dp"
                            android:text="Libros"
                            android:textAlignment="textStart"
                            style="@style/txtColorR"
                            android:textSize="16sp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/coleccPerfil"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:fontFamily="@font/alata"
                            android:gravity="center"
                            android:text="0"
                            style="@style/txtColorR"
                            android:paddingRight="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/txtcoleccP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="11dp"
                            android:fontFamily="@font/alata"
                            android:text="Colecciones"
                            android:textAlignment="center"
                            style="@style/txtColorR"
                            android:textSize="16sp"></TextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/nombretxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alata"
                        android:text="Nombre"
                        style="@style/txtColorR"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/nombrePerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alata"
                        android:text="Nombre"
                        android:textAlignment="viewEnd"
                        style="@style/txtDatosP"
                        android:textSize="18sp"></TextView>

                    <Button
                        android:id="@+id/editarNombre"
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        android:padding="6dp"
                        app:cornerRadius="10dp"></Button>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:background="@color/rosa"
                    android:shadowColor="@color/rosa"
                    android:shadowRadius="10"></androidx.appcompat.widget.AppCompatImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/emailtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alata"
                        android:text="Email"
                        style="@style/txtColorR"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/emailPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alata"
                        android:text="Email"
                        android:textAlignment="viewEnd"
                        style="@style/txtDatosP"
                        android:textSize="12sp"></TextView>

                    <Button
                        android:id="@+id/editarEmail"
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        android:padding="6dp"
                        app:cornerRadius="10dp"></Button>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:background="@color/rosa"
                    android:shadowColor="@color/rosa"
                    android:shadowRadius="10"></androidx.appcompat.widget.AppCompatImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/usertxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alata"
                        android:text="Usuario"
                        style="@style/txtColorR"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/userPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alata"
                        android:text="Usuario"
                        android:textAlignment="viewEnd"
                        style="@style/txtDatosP"
                        android:textSize="18sp"></TextView>

                    <Button
                        android:id="@+id/editarUsuario"
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        android:padding="6dp"
                        app:cornerRadius="10dp"></Button>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:alpha="0.5"
                    android:background="@color/rosa"
                    android:shadowColor="@color/rosa"
                    android:shadowRadius="10"></androidx.appcompat.widget.AppCompatImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/contrtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/alata"
                        android:text="Contraseña"
                        style="@style/txtColorR"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/contrPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="**********"
                        android:textAlignment="viewEnd"
                        style="@style/txtDatosP"
                        android:textSize="18sp"></TextView>

                    <Button
                        android:id="@+id/editarContr"
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:drawableRight="@drawable/ic_baseline_refresh_24"
                        android:padding="6dp"
                        app:cornerRadius="10dp"></Button>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        style="@style/fondoDrawer"
        android:layout_gravity="start">

        <include layout="@layout/drawer_izq"></include>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>