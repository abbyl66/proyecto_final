<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/descarga"
    tools:context=".vista.InicioSesion">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:elevation="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/marco_rosa"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="36dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/ini_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/marco_rosa"
                android:drawableLeft="@drawable/ic_baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:hint="Nombre de usuario"
                android:padding="8dp"
                android:textColor="@color/black"></EditText>

            <EditText
                android:id="@+id/ini_ctrsenia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/marco_rosa"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Contraseña"
                android:padding="8dp"
                android:textColor="@color/black"></EditText>

            <Button
                android:id="@+id/btini_iniciar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Iniciar sesión"
                android:textSize="18sp"
                app:cornerRadius="20dp"></Button>

            <TextView
                android:id="@+id/btini_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="¿No tienes una cuenta? Regístrate"
                android:textColor="@color/pink"
                android:textSize="16sp"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>