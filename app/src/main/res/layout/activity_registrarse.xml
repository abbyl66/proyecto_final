<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context=".vista.Registrarse">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:elevation="30dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/marco_purpura"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="@color/purpura"
                android:fontFamily="@font/alata"
                android:textSize="36dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/reg_nombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/alata"
                android:layout_marginTop="40dp"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:background="@drawable/marco_purpura"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawableTint="@color/purpura"
                android:drawablePadding="8dp"
                android:hint="Nombre"
                android:textColorHint="@color/grey"
                android:padding="8dp"
                android:textColor="#FF4D4D4D"></EditText>

            <EditText
                android:id="@+id/reg_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:fontFamily="@font/alata"
                android:background="@drawable/marco_purpura"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/purpura"
                android:textColorHint="@color/grey"
                android:hint="email@gmail.com"
                android:padding="8dp"
                android:textColor="#FF4D4D4D"></EditText>

            <EditText
                android:id="@+id/reg_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:background="@drawable/marco_purpura"
                android:fontFamily="@font/alata"
                android:drawableLeft="@drawable/ic_baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:textColorHint="@color/grey"
                android:drawableTint="@color/purpura"
                android:hint="Nombre de usuario"
                android:padding="8dp"
                android:textColor="#FF4D4D4D"></EditText>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:boxBackgroundMode="outline"
                android:layout_marginTop="20dp"
                android:hint="Contraseña"
                android:background="@drawable/marco_purpura"
                android:textColorHint="@color/grey"
                app:passwordToggleTint="@color/purpura">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_ctrsenia"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:fontFamily="@font/alata"
                    android:singleLine="true"
                    android:drawableTint="@color/purpura"
                    android:padding="8dp"
                    android:textColor="#FF4D4D4D"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btreg_regist"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purpura"
                android:text="Registrarse"
                android:fontFamily="@font/alata"
                android:textSize="18sp"
                app:cornerRadius="20dp"></Button>

            <Button
                android:id="@+id/verificarEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/celeste"
                android:text="Verificar email"
                android:fontFamily="@font/alata"
                android:visibility="gone"
                android:textSize="18sp"
                app:cornerRadius="20dp"></Button>

            <TextView
                android:id="@+id/btreg_iniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/alata"
                android:padding="8dp"
                android:text="¿Ya tienes una cuenta? Inicia sesión"
                android:textColor="@color/celeste"
                android:textSize="16sp"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>