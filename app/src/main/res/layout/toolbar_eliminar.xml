<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/toolbarEliminar"
    style="@style/fondoRosa">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelarToolbar"
        android:backgroundTint="@color/rosa"
        android:src="@drawable/ic_baseline_arrow_back_24"></ImageButton>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="250dp"
        android:id="@+id/eliminarLibColecc"
        android:backgroundTint="@color/rosa"
        android:src="@drawable/ic_baseline_delete_24"></ImageButton>


</LinearLayout>